<link rel="stylesheet" href="/stylesheets/habit_details.css">
<div class="row">
    <div class="col-md-12">
        <div class="text-center" id="nav-wrapper">
            <h1 id="title"> HappyHelper <i class="fa fa-smile-o"></i></h1>
            <nav id="nav" class="navbar" role="navigation">
                <ul class="nav navbar-nav">
                    <li id="first"><a href="/dashboard">DASHBOARD</a></li>
                    <li><a href="/habits">HABITS</a></li>
                    <li><a href="/meetups">MEETUPS</a></li>
                    <li><a href="/recommendations">RECOMMENDATIONS</a></li>
                    <li id="last"><a href="/logout" target="_self">LOGOUT</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="habit-wrapper">
            <div class="row">
                <div class="col-md-2">
                    <a href="/habits"><h5><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to all habits</h5></a>
                </div>

        		<div class="col-md-8">
        			<h1 class="heading">{{habit.name}}</h1>
        		</div>

        		<div class="col-md-2">
        			<a href="/delete/{{habit.name}}"><h5>Delete habit</h5></a>
        		</div>
            </div>

            <div class="row">

                <div class=" col-md-4">
                    <div class="update-habit-wrap">
                        <div class="date-wrap">
                            <h3 class="heading"> {{today}} </h3>
                        </div>
                        <form class="update-habit" form method="POST" action="/update/{{habit.name}}">
                            <h4 class="text-center"> Update todays {{habit.name}} value: </h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="inputContainer">
                                        <label>{{habit.unit}}</label>
                                        <div><input id="update-val" name="habitVal" {{#if todaysHab}} value={{todaysHab.value}} {{/if}} type="number"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="button-wrap">
                                        <button class="update-button btn btn-success" type="submit">Update</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>


                <div class="col-md-8">
                    <div class="graph-wrap">
                        <h1> beaut graph here</h1>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
