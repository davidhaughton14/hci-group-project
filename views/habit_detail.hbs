<link rel="stylesheet" href="/stylesheets/habit_details.css">

<div class="text-center" id="nav-wrapper">
    <div class="content">
    	<div class="row">
    		<div class="col-md-2">
    			<a href="/habits"><h5><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back to all habits</h5></a>
    		</div>

    		<div class="col-md-8">
    			<h1>{{habit}}</h1>
    		</div>

    		<div class="col-md-2">
    			<a href="/delete/{{habit}}"><h5>Delete habit</h5></a>
    		</div>
    	</div>

    	<div class="row">
    		<div class="day-calander col-md-4">

    			<i class="pull-left fa fa-arrow-left" aria-hidden="true"></i>Today<i class="pull-right fa fa-arrow-right" aria-hidden="true"></i>

				<form class="update-habit" form method="POST" action="/update/{{habit}}">
					<label>Enter {{habit}} units</label>
					<div class="row">
    					<input name="habitVal" type="text"> units
    					<div class="row">
    						<button class="update-button btn btn-success" type="submit">Update</button>
    					</div>
					</div>
				</form>
    		</div>


	    	<div class="habit-graph col-md-6">
				<div id="sleep_div"></div>
                <div id="heartrate_div"></div>

                <table>
                    <tr>
                        <th>Monday</th>
                        <td><div style="height: 100px; width: 100px; z-index: 2; position: relative; background-color: blue;"><img class="beerMonday" src="/images/beer.jpeg"></div></td>
                    </tr>
                    <tr>
                        <th>Tuesday</th>
                        <td><img class="beerTuesday" style="clip: rect(1000px,2000px,2000px,0px);" src="/images/beer.jpeg"></td>
                    </tr>
                    <tr>
                        <th>Wednesday</th>
                        <td>mugs</td>
                    </tr>
                    <tr>
                        <th>Thursday</th>
                        <td>mugs</td>
                    </tr>
                    <tr>
                        <th>Friday</th>
                        <td>mugs</td>
                    </tr>
                    <tr>
                        <th>Saturday</th>
                        <td>mugs</td>
                    </tr>
                    <tr>
                        <th>Sunday</th>
                        <td>mugs</td>
                    </tr>
                </table>
                <h4> Congratulations, you have been sober for x days </h4>
                <div id="alcohol_div"></div>
	    	</div>
    	</div>

    </div>


    	</div>

    </div>
</div>
