<form method="POST" action="">
	<div class="form-group">
	<label for="name"> Name </label>
	<input name="name" class="name form-control" type="text" placeholder="habit name">

	<button class="btn btn-primary" type="submit">Submit</button>

	</div>

	{{#if errors}}
        {{#each errors}}
