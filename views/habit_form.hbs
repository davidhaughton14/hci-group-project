<link rel="stylesheet" href="/stylesheets/habits.css">

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="habit-wrap">
            <form class="form-wrap" method="POST">
                <label for="name"> Habit name </label>
                <input name="name" class="name form-control" type="text">
                <label for="name"> Habit unit </label>
                <input name="name" class="name form-control" type="text">
                <label for="name"> Habit daily limit </label>
                <input name="name" class="name form-control" type="text">
                <button class="btn btn-primary" type="submit">Create habit</button>
            </form>
        </div>
    </div>
</div>
<div class="text-center" id="nav-wrapper">
    <div class="content">
			<div class="form-group">
			<label for="name"> Name </label>
			<input name="name" class="name form-control" type="text" placeholder="habit name">


			</div>

			{{#if errors}}
		        {{#each errors}}
		        <div class="animated tada alert alert-danger">
		            {{msg}}
		        </div>
		        {{/each}}
		    {{/if}}

		</form>
    </div>
</div>
