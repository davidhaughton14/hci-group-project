<link rel="stylesheet" href="/stylesheets/meetup-details.css">

<div class="row">
    <div class="col-md-12">
        <div class="text-center" id="nav-wrapper">
            <nav id="nav" class="navbar" role="navigation">
                <ul class="nav navbar-nav">
                    <li id="first"><a href="/dashboard">DASHBOARD</a></li>
                    <li><a href="/habits">HABITS</a></li>
                    <li class="active"><a href="/meetups">MEETUPS</a></li>
                    <li><a href="/recommendations">RECOMMENDATIONS</a></li>
                    <li id="last"><a href="/logout" target="_self">LOGOUT</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <form class="attending" form method="POST" action="/attending/{{meetup.name}}">
            <div class="meetup-wrapper">
                <div class="header-wrapper">
                    <h1 class="text-center"> {{meetup.name}} </h1>
                </div>
                <div class="field-wrapper">
                    <h3 class="align">Attending</h3>
                    <div class="checkbox">
                        <label class="switch">
                          <input id="attending" name="attending" data-is-attending= "{{user}}" onChange="this.form.submit()" {{#if attending}} checked="true" {{/if}} type="checkbox">
                          <span class="slider round"></span>
                        </label>
                    </div>
                </div>
                <div class="field-wrapper">
                    <h3><i class="fa fa-calendar align-less" aria-hidden="true"></i> {{meetup.date}} at {{meetup.time}}</h3>
                </div>
                <div class="field-wrapper">
                    <h3><i class="fa fa-globe align-less" aria-hidden="true"></i> {{meetup.location}}</h3>
                </div>
                <div class="field-wrapper">
                    <h3 class="detail-header align-less"><i class="fa fa-info-circle" aria-hidden="true"></i> Meetup details</h3>
                    <h4>{{meetup.about}}</h4>
                </div>
                <div id="last" class="field-wrapper">
                    <h3 class="attending-heading align-less"><i class="fa fa-users" aria-hidden="true"></i> Users attending</h3>
                    <div class="row">
                        {{#each meetup.attending}}
                                <div class="col-md-6">
                                    <div class="person-div">
                                        <img class="user-img img-circle" src="/images/placeholder.png" /><span class="username">{{this}}</span>
                                    </div>
                                </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
<script src="/javascripts/attending.js"></script>
