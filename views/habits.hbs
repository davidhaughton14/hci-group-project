<link rel="stylesheet" href="/stylesheets/habits.css">
<div class="row">
    <div class="col-md-12">
        <div class="text-center" id="nav-wrapper">
            <nav id="nav" class="navbar" role="navigation">
                <ul class="nav navbar-nav">
                    <li id="first"><a href="/dashboard">DASHBOARD</a></li>
                    <li><a href="/habits">HABITS</a></li>
                    <li><a href="/meetups">MEETUPS</a></li>
                    <li><a href="/recommendations">RECOMMENDATIONS</a></li>
                    <li id="last"><a href="/logout" target="_self">LOGOUT</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="habit-wrap">
            {{#if hasHabits}}
            	<h2 class="text-center heading">Your tracked habits</h2>
                <div class="row">
                    {{#if habits}}
                        {{#each habits}}
                        <div class="col-md-4">
                            <a href ="habits/{{this.name}}">
                                <div class="habit text-center">
                                    <div class="icon">
                                        <i class="fa fa-user fa-3x" aria-hidden="true"></i>
                                        <h4> {{this.name}} </h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {{/each}}
                    {{/if}}
                    {{#if bp}}
                        <div class="col-md-4">
                            <a href ="habits/{{bp.name}}">
                                <div class="habit text-center">
                                    <div class="icon">
                                        <i class="fa fa-heartbeat fa-3x"></i>
                                        <h4> {{bp.name}} </h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/if}}
                    {{#if step}}
                        <div class="col-md-4">
                            <a href ="habits/{{step.name}}">
                                <div class="habit text-center">
                                    <div class="icon">
                                        <i class="fa fa-paw fa-3x" aria-hidden="true"></i>
                                        <h4> {{step.name}} </h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/if}}
                    {{#if sleep}}
                        <div class="col-md-4">
                            <a href ="habits/sleep">
                                <div class="habit text-center">
                                    <div class="icon">
                                        <i class="fa fa-bed fa-3x" aria-hidden="true"></i>
                                        <h4> {{sleep.name}} </h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/if}}
                    {{#if vitD}}
                        <div class="col-md-4">
                            <a href ="habits/{{vitD.name}}">
                                <div class="habit text-center">
                                    <div class="icon">
                                        <i class="fa fa-sun-o fa-3x" aria-hidden="true"></i>
                                        <h4> {{vitD.name}} </h4>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/if}}
                    <div class="col-md-4">
                        <div class="new-habit text-center">
                            <div class="icon">
                                <a href="habits/create"><i class="fa fa-plus fa-4x" aria-hidden="true"></i>
                                <h4>Add new habit</h4></a>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <h2 class="text-center"> You are currently not tracking any habits, add some!</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="new-habit text-center">
                            <a href="habits/create"><i class="fa fa-plus fa-4x" aria-hidden="true"></i>
                            <h4>Add new habit</h4></a>
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>

